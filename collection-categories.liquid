<style>
  .collection-main-custom .inner-heading h4 {
    margin: 0;
    font-size: 12px;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 2px;
    color: #ea1616;
}
  .collection-main-custom .inner-heading h2 {
    font-size: 36px;
    margin-bottom: 30px;
}
.collection-main-custom .first-collection a {
    display: inline-block;
    width: 100%;
    border-radius: 4px;
}
.collection-main-custom .first-collection img {
    width: 100%;
    max-height: 700px;
    border-radius: 4px;
}
.collection-main-custom .collection-main-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
}
  .collection-main-custom .bottom-collection {
    padding-top: 16px;
    margin-top: 16px;
    border-top: .1rem solid #5f5f5f;
}
  .collection-main-custom .bottom-collection h3 {
    margin-bottom: 6px;
    font-size: 25px;
    font-weight: 600;
}
 .collection-main-custom .bottom-collection p {
    font-size: 15px;
    margin-bottom: 18px;
}
  .collection-main-custom .btn-col {
    display: flex;
    align-items: center;
    position: relative;
    justify-content: unset;
}
  .collection-main-custom .btn-col a {
    text-transform: uppercase;
    font-size: 12px;
    font-weight: 600;
}
  .collection-main-custom span.button-icon {
    line-height: 0;
    margin-right: 5px;
}



@media(max-width: 1200px){
  .collection-main-custom .collection-main-grid {
    grid-template-columns: repeat(2, 1fr);
}
}


@media(max-width: 992px){
.collection-main-custom {
    padding-top: 0 !important;
    padding-bottom: 60px !important;
}
  }
  

@media(max-width: 768px){
  .collection-main-custom .collection-main-grid {
    grid-template-columns: repeat(1, 1fr);
}
}


  
  
</style>


