<div class="parallex-main-custom" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container">
   <div class="inner-parallex">
       <h2>{{ section.settings.heading }}</h2>
   </div>

    <div class="bottom-section-parallex">

      <div class="image-textarea">
        {% for block in section.blocks limit: 3 %}
            <div class="image image{{ forloop.index }}">
               <img src="{{ block.settings.image | img_url : 'master' }}">
            </div>
        {% endfor %}
    </div>
      
  </div>
</div>
</div>

<style>

 .parallex-main-custom .inner-parallex{
    margin: 0 auto;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    position: sticky;
    top: 0;
    min-height: 100vh;
  }
   .parallex-main-custom .inner-parallex h2 {
    max-width: 920px;
    font-size: 60px;
    width: 100%;
    font-weight: 500;
}
  .bottom-section-parallex {
    position: relative;
}
  .parallex-main-custom .image {
    max-width: 30%;
    width: 100%;
}
  .parallex-main-custom .image img {
    width: 100%;
}
 .parallex-main-custom .image-textarea {
    display: grid;
    gap: 65px;
}
  .parallex-main-custom .image.image2 {
    margin-left: auto;
}


@media(max-width: 1200px){
  .parallex-main-custom .inner-parallex h2 {
    font-size: 50px;
}
}


@media(max-width: 992px){
  .parallex-main-custom .inner-parallex h2 {
    font-size: 48px;
}
}


@media(max-width: 768px){
    .parallex-main-custom .image {
    max-width: 40%;
}
}

  
</style>


{% schema %}
  {
    "name": "parallex-bg",
    "settings": [
        {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "label": "Padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "label": "Padding bottom",
        "default": 36
      },
       { 
        "type": "text",
        "id": "heading",
        "label": "heading",
        "default": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "columns",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "parallex-bg"
      }
    ]
  }
{% endschema %}